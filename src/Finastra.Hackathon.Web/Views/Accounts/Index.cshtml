@{
    ViewData["Title"] = "Accounts";
    ViewData["Active"] = "Accounts";
}

<partial name="SideBar" view-data="ViewData"></partial>

<div class="jumbotron fin-blue rounded-0 navpad">
    <h4>Accounts</h4>
</div>


@*// dummy data*@
@{
    var accounts = new[]
    {
        new {
            Name = "Peter's Pumpkin Cannery",
            Balance = "38,800"
        },
        new {
            Name = "Bob's Banana Stand",
            Balance = "47,200"
        },
        new {
            Name = "Jeremy's Gnome Emporium",
            Balance = "12,400"
        },
        new {
            Name = "William's Worm Farm",
            Balance = "19,500"
        }
    };
}


<div class="container">
    <main role="main" class="pb-3">
        <div class="row">
            <div class="col-5">
                <ul class="card-list">
                    @foreach(var account in accounts) {
                        <li>
                            <div class="account-card">
                                <div class="row">
                                    <div class="col-4 d-flex align-items-center justify-content-center pr-0">
                                        <i class="fal fa-credit-card"></i>
                                    </div>
                                    <div class="col-8 d-flex flex-column">
                                        <span>@account.Name</span>
                                        <span class="balance">$@account.Balance</span>
                                    </div>
                                </div>
                                <div class="d-flex p-1" style="border-top: 1px solid gainsboro;">
                                    1234098751234
                                </div>
                            </div>
                        </li>
                    }

                </ul>

            </div>
            <div class="col-7">

            </div>
        </div>
    </main>
</div>