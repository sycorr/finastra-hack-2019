@{
    var key = ViewBag.Active;
}
<div id="sidebar" class="box-shadow">
    <div class="side-header p-2">
        <div class="product-card mat-card box-shadow">
            {{productLine}}
        </div>
    </div>
    <ul>
        <li data-route="accounts" class="@(key.Equals("Accounts") ? "active" : "")"><div class="side-spacer noselect"><i class="far fa-address-card"></i></div><a class="noselect" href="/Accounts">Accounts</a></li>
        <li data-route="accountingPrinciples" class="@(key.Equals("AccountingPrinciples") ? "active" : "")"><div class="side-spacer noselect"><i class="fal fa-calculator-alt"></i></div><a class="noselect" href="/AccountingPrinciples">Accounting Principles</a></li>
        <li data-route="insights" class="@(key.Equals("Insights") ? "active" : "")"><div class="side-spacer noselect"><i class="far fa-lightbulb-dollar"></i></div><a class="noselect" href="/Insights">Insights</a></li>
    </ul>
    <div class="side-footer">
        <div class="p-1"><i class="fas fa-question-circle mr-2"></i><a href="/help">Help</a></div>
